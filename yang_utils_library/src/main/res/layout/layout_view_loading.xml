<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gy_bg_color"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialogbg_circle_shape"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp">


        <com.utils.gyymz.wiget.GifView
            android:visibility="gone"
            android:id="@+id/gif_loading"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:enabled="false" />


        <com.utils.gyymz.wiget.SpinnerLoader
            android:layout_gravity="center"
            android:id="@+id/sl_loading"
            android:layout_centerHorizontal="true"
            app:point_color="@color/accent_material_dark"
            app:isdynamic="false"
            android:layout_width="40dp"
            android:layout_height="40dp"/>


        <TextView
            android:id="@+id/tv_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="努力加载中..."
            android:textColor="#fff"
            android:textSize="14sp"
            tools:text="正在加载..." />

    </LinearLayout>

</RelativeLayout>